<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:background="@drawable/backdrop4"
    tools:context=".EditProjectActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" >
        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="#00FFFFFF"
            android:contentDescription="Help"
            android:foregroundGravity="fill"
            android:foregroundTint="#FBFBFB"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:tint="#00FFFFFF"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/projTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="72dp"
        android:text="Project Name"
        android:textSize="17sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/rectangleBackground1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/backgd"
        android:elevation="8dp" />

    <EditText
        android:id="@+id/projName"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/projTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="108dp"
        android:elevation="8dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:lineSpacingExtra="10sp"
        android:singleLine="false"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/labelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projName"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="161dp"
        android:text="Labels"
        android:textSize="18sp" />

    <View
        android:id="@+id/rectangleBackground2"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="174dp"
        android:background="@drawable/backgd"
        android:elevation="8dp" />

    <EditText
        android:id="@+id/inputLabel"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="4dp"
        android:elevation="8dp"
        android:hint="Add new label"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/labelAdd"
        android:layout_width="47dp"
        android:layout_height="48dp"
        android:layout_below="@id/labelTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:src="@android:drawable/ic_input_add"
        android:text="ADD"
        android:tint="#6200EA" />

    <ListView
        android:id="@+id/labelList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inputLabel"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:longClickable="true"></ListView>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:layout_weight="0"
        android:width="170dp"
        android:text="Save"
        app:cornerRadius="300dp" />


</RelativeLayout>